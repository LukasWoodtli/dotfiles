# http://EditorConfig.org

# top-most EditorConfig file
root = true


# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = latin1
trim_trailing_whitespace = true

# Python
[*.py]
charset = utf-8
indent_style = space
indent_size = 4

# Make
[Makefile]
indent_style = tab

# CMake
[{CMakeLists.txt,*.cmake}]
indent_style = space
indent_size = 2


# C/C++ files
[{*.h,*.cpp,*.c}]
indent_style = tab
indent_size = tab

